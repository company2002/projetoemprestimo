{
  "name": "sistema-emprestimo",
  "version": "1.0.0",
  "description": "Sistema de gerenciamento de emprÃ©stimos",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "cross-env NODE_ENV=development nodemon backend/server.js",
    "prod": "cross-env NODE_ENV=production node backend/server.js",
    "test": "jest --coverage",
    "lint": "eslint . --ext .js",
    "format": "prettier --write '**/*.{js,json,md}'",
    "build": "npm install && npm run lint",
    "backup": "node backend/src/scripts/backup.js",
    "migrate": "node backend/src/scripts/migrate.js",
    "seed": "node backend/src/scripts/seed.js",
    "security-check": "npm audit && snyk test",
    "prepare": "husky install"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.12.0",
    "node-cron": "^3.0.0",
    "nodemailer": "^6.9.12",
    "pdfkit": "^0.16.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.9",
    "prettier": "^3.2.5",
    "snyk": "^1.1280.0",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
